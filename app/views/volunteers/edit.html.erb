<div class="container">
  <div class="row">
    <div class="col s12 center-align">
      <h1>Update!</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
      <%= form_for :volunteer, url: '/volunteers/:id', html: { multipart: true, class: "col s12 m6 offset-m3"}, method: :patch do |f| %>
        <b>Name: </b><%= f.text_field :name, required: true %>
        <b>Profile Photo: </b><%= f.file_field :avatar %>
        <b>About: </b><%= f.text_area :about %>
        <b>Location: </b><%= f.text_area :location %>
        <b>Contact: </b><%= f.text_area :contact %>
        <%= f.submit 'Update', class: 'btn waves-effect waves-light' %>
      <% end %>
    </div>
  </div>
</div>
