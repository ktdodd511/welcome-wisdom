

  <div class="row col s12">
     <div class="col s5">
       <div class="container">
       <div class="card indigo lighten-3">
          <div class="card-content white-text">
   <h2 class="center-align" style="margin-top: 0;"><%= @care_group.name %></h2>
  <div class= "row">
   <div class="container profile_image">
     <img src="<%= @care_group.photo.url%>" style="width: 100%; height: 100%;">
         </div>
  </div>
         <div class="row">
        <div class="col s12 m12">

          <div class="card-panel grey lighten-5">

            <span class="black-text">
              Hello
              <%= @care_group.about %>
            </span>
          </div>
        </div>
      </div>
         <div class="card-action center-align">


          <%= link_to "Edit Profile", edit_care_group_path(@care_group), class: "waves-effect waves-light btn center-align" %>
         </div>
        </div>
       </div>
     </div>
   </div>

<div class="col s6">
  <div class="col s12 offset-s3">
    <% if current_care_group == CareGroup.find(params[:id]) %>
    <%= link_to "Add a member", new_care_group_senior_path, class: "waves-effect waves-light btn" %>
    <%= link_to "View all volunteers", all_volunteers_path, class: "waves-effect waves-light btn" %>
    <% end %>
  </div>
</div>

  <div class="col s6">
   <ul class="collection ">
<% @seniors.each do |senior| %>
    <li class="collection-item avatar">
      <img src="#" alt="" class="circle">
      <span class="title"><%= senior.name %></span>
      <p><%= senior.location %> <br>
         <%= senior.interests %>
      </p>
      <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
    </li>
    <% end %>

  </ul>
</div>
</div>
