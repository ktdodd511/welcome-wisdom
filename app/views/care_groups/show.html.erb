

  <div class="row col s12">
     <div class="col s5">
       <div class="container">
       <div class="card indigo lighten-3">
          <div class="card-content white-text">
   <h2 class="center-align" style="margin-top: 0;"><%= @care_group.name %></h2>
  <div class= "row">
   <div class="container profile_image">
     <img src="<%= @care_group.photo.url%>" style="width: 100%; height: 100%;">
         </div>
         <div class="container location">
           <span class="black-text">
             Location: <%= @care_group.location %>
          </span>
         </div>
  </div>
         <div class="row">
        <div class="col s12 m12">

          <div class="card-panel grey lighten-5">

            <span class="black-text">
              About:
            <%= @care_group.about %>
            </span>

          </div>
        </div>
      </div>
         <div class="card-action center-align">


          <%= link_to "Edit Profile", edit_care_group_path(@care_group), class: "waves-effect waves-light btn center-align" %>
         </div>
        </div>
       </div>
     </div>
   </div>

<div class="col s6">
  <div class="col s12 offset-s3">
    <%= link_to "View all senior memebers of this group", all_care_group_seniors_path(@care_group), class: "waves-effect waves-light btn" %>
  </div>
</div>

<div class="page-header">
        <h3>Visit Pending My Approval</h3></div>
        <% if current_volunteer = nil %>
    <div class="media">
        <div class="media-body">
          <% @care_group.seniors.each do |senior| %>
          <% senior.visits.each do |visit| %>
          <% if visit.pending? %>
            <h4><%= link_to visit.volunteer.name, volunteer_path(visit.volunteer) %> wants to visit <%= visit.senior.name %><br></h4>
            <%= link_to "Accept or Next Time", senior_visit_path(senior, visit) %><br>
            <% end %>
            <% end %>
            <% end %>
        </div>
    </div>
    <% end %>
